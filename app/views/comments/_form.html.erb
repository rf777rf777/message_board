<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <strong>From:</strong><br>
    <!-- <%= f.label :commenter %><br> -->
    <%= f.text_field :commenter %>
  </p>
  <p>
    <strong>Comment:</strong><br>
    <!-- <%= f.label :body %><br> -->
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit class: "btn btn-success" %>
  </p>
<% end %>