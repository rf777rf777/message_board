<h1>Topic List</h1>
 
 <div>
 <%= link_to 'Leave Message', new_article_path , class: "btn btn-primary btn-lg" %> <br><br>
</div>

<table class="table">
  <tr class="active">
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>


  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
        <th><%= link_to "Response", article_path(article) ,class: "btn btn-success btn-block"%></th>
        <th><%= link_to "Edit", edit_article_path(article) ,class: "btn btn-warning btn-block" %></th>
        <th><%= link_to "Delete", article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-block" %></th>
  <% end %>
</table>
</div>